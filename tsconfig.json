{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "jsxImportSource": "@emotion/react",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "verbatimModuleSyntax": false,
    "outDir": "dist",
    "typeRoots": [
      "./node_modules/@types",
      "./types"
    ],
    "baseUrl": ".",
    "paths": {
      "src/web/client/components/*": ["src/web/client/components/*"]
    }
  },
  "include": [
    "src",
    "tests",
    "scripts",
    "types",
    "src/web/client/__generated__"
  ],
  "ts-node": {
    "logError": true,
    "pretty": true /* <= technically not required */
  }
}